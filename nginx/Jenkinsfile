pipeline {
    agent any
    parameters {
        choice(name: 'SERVER', choices: ['nginx1', 'nginx2'])
        choice(name: 'ACTION', choices: ['stop', 'start', 'reload'])
    }

    stages {
        stage('Stop nginx') {
            steps {
                  sh 'ansible-playbook nginx/nginx_playbook.yml -i nginx/hosts.yml -e "host=${SERVER}" -t stop'
            }
        }

        stage('Start nginx') {
            steps {
                  sh 'ansible-playbook nginx/nginx_playbook.yml -i nginx/hosts.yml -e "host=${SERVER}" -t start'
            }
        }
    }
}